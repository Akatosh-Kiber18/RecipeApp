<h1>New Recipe</h1>

<%= form_with(model: @recipe, url: recipes_path, method: :post) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :instructions %>
    <%= form.text_area :instructions %>
  </div>
  <div>
    <%= form.submit 'Create Recipe' %>
  </div>
<% end %>

<%= link_to 'Back to Recipes', recipes_path %>